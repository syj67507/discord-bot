{
    "name": "discord-bot",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "tsc -p ./tsconfig.json",
        "clean": "tsc --build --clean && npm run clean-media && npm run clean-build && npm run clean-gcp && npm run clean-test",
        "clean-media": "rimraf -f media/say.mp3",
        "clean-build": "rimraf -rf dist",
        "clean-gcp": "rimraf -f googleApplicationCredentials.json",
        "clean-test": "rimraf -rf coverage",
        "deploy": "node dist/deploy.js",
        "dev": "nodemon --ext ts --exec \"npm run clean && npm run build && npm run deploy && node dist/index.js\"",
        "format-check": "prettier --config .prettierrc --check ./src ./tests",
        "format-write": "prettier --config .prettierrc --write ./src ./tests",
        "lint": "eslint .",
        "prestart": "npm update ytdl-core ytsr",
        "start": "node dist/index.js",
        "test": "npm run clean-build && npm run clean-test && jest --verbose tests",
        "oldtest": "npm run clean-build && npm run clean-test && jest tests/custom/ytclient.test.ts tests/custom/validators.test.ts tests/custom/base.test.ts tests/commands/music/queue.test.ts tests/commands/utility/help.test.ts tests/commands/music/queuenext.test.ts --silent --verbose"
    },
    "lint-staged": {
        "{src,tests}/**/*": [
            "npm run format-write",
            "npm run lint"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "author": "",
    "license": "ISC",
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ],
            "@babel/preset-typescript"
        ]
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "coveragePathIgnorePatterns": [
            "src/index.ts"
        ],
        "moduleDirectories": [
            "node_modules",
            "src"
        ],
        "setupFiles": [
            "<rootDir>/tests/.jest/setupCommands.ts",
            "<rootDir>/tests/.jest/setupInteraction.ts",
            "<rootDir>/tests/.jest/setupPokemonData.ts"
        ]
    },
    "dependencies": {
        "@google-cloud/text-to-speech": "^3.2.0",
        "axios": "^1.3.5",
        "discord.js": "^14.9.0",
        "ffmpeg-static": "^4.2.7",
        "libsodium-wrappers": "^0.7.9",
        "winston": "^3.3.3",
        "ytdl-core": "^4.9.1",
        "ytpl": "^2.2.3",
        "ytsr": "^3.5.2"
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-typescript": "^7.15.0",
        "@types/babel__core": "^7.1.17",
        "@types/jest": "^27.0.1",
        "@types/node": "^14.14.20",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "babel-jest": "^27.0.6",
        "dotenv": "^16.0.3",
        "eslint": "^7.8.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.1",
        "husky": "^4.3.8",
        "jest": "^27.4.5",
        "lint-staged": "^11.1.2",
        "nodemon": "^2.0.7",
        "prettier": "^2.3.2",
        "typescript": "^4.5.4"
    }
}
